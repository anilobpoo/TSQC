<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/invisibleborder">


            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/fImage"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                card_view:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/fabno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:textColor="@color/QRCodeWhiteColor"
                android:layout_toEndOf="@+id/fImage"
                android:layout_toRightOf="@+id/fImage"
                android:padding="5dp"
                android:text="Fab#:"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/fdelete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                card_view:srcCompat="@drawable/ic_keyboard_arrow_down_white_36dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />








        </RelativeLayout>



</LinearLayout>