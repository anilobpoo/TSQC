<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="100dp"
                    android:id="@+id/stylesimage"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:layout_height="100dp" />

                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="70dp"
                    android:id="@+id/fabricImage"
                    android:layout_margin="5dp"
                    android:visibility="visible"
                    android:scaleType="fitCenter"
                    android:layout_height="100dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linRadioBtn"
            android:layout_weight="1"
            >

            <RadioGroup
                android:gravity="right"
                android:id="@+id/radgrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingRight="10dp"
                android:orientation="horizontal">
                <RadioButton

                    android:text="Ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/BrandedCheckBox"
                    android:id="@+id/ok"/>


                <RadioButton

                    android:text="Not Ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/notok"/>

            </RadioGroup>


            <TextView
                android:id="@+id/nameStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingLeft="10dp"
                android:gravity="right"
                android:layout_gravity="right"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Name"
                android:textColor="@color/QRCodeBlackColor" />


            <TextView
                android:id="@+id/FabricName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingLeft="10dp"
                android:gravity="right"
                android:layout_gravity="right"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="FabricName"
                android:textColor="@color/QRCodeBlackColor" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"

            >
            <CheckBox
                android:text="Ok"
                android:layout_width="wrap_content"
                android:id="@+id/checkbox"
                android:theme="@style/BrandedCheckBox"
                android:layout_height="wrap_content" />

            <CheckBox
                android:text="Not Ok"
                android:layout_width="wrap_content"
                android:id="@+id/checkbox1"

                android:layout_height="wrap_content" />

        </LinearLayout>





    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9ccd9"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/linRadioBtn"
        />
</LinearLayout>

